@using System.Security.Claims
@model IEnumerable<ReversiMvcApp.Models.Speler>

@{
    ViewData["Title"] = "User Roles Management";
}

<h1>User Roles Management</h1>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Delete User</th> <!-- New column for Delete User link -->
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            if (user.GUID != User.FindFirstValue(ClaimTypes.NameIdentifier)) // Exclude current user
            {
                <tr>
                    <td>@user.Naam</td>
                      <td>
                        @if (User.IsInRole("Beheerder") || User.IsInRole("Mediator"))
                        {
                            <a class="btn btn-danger" asp-controller="Spelers" asp-action="Delete" asp-route-id="@user.GUID" onclick="return confirm('Are you sure you want to delete this user?')">Delete User</a>
                        }
                    </td>
                </tr>
            }
        }
    </tbody>
</table>

<a class="btn btn-secondary" asp-controller="Home" asp-action="Index">Back to Home</a>

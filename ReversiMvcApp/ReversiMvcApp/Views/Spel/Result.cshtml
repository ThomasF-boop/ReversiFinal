@using System.Security.Claims;
@model ReversiMvcApp.Models.Spel;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<h1>Resultaat</h1>
<hr />
@if (Model.Finished)
{
    <h2>Game has ended.</h2>
    @if (Model.Winnaar == "Gelijk")
    {
        <h3>Draw!</h3>
    }
    else if (Model.Winnaar == User.FindFirst(ClaimTypes.NameIdentifier).Value)
    {
        <h3>You win!</h3>
    }
    else
    {
        <h3>You lose</h3>
    }
}
else
{
    <h2>The game has not ended yet!</h2>
}


<a asp-controller="Spel" asp-action="Index">Back to game list</a>
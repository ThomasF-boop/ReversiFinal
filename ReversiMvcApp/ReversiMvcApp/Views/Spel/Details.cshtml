﻿@using Microsoft.Extensions.Configuration
@model ReversiMvcApp.Models.GamePlayerToken
@inject IConfiguration _config
@{
    ViewData["Title"] = "Details";
}
@section headScripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.js"></script>
    <script src="~/js/app.js"></script>
    <script src="~/js/vendor.js"></script>
    <script src="~/js/templates.js"></script>
    <link rel="stylesheet" href="~/css/style.min.css">
}

<h1>Detaisl</h1>

<div id="popup">
    <p>Missing other player.</p>
</div>
<div id="player-color"></div>
<div id="player-turn"></div>
<div id="game-board" class="board"></div>

<div id="controls">
    <button id="skip-turn">Skip Turn</button>
    <button id="give-up">Give Up</button>
</div>


<div id="endState" class="endState"></div>

<script>
    $(document).ready(function () {
        Game.init("https://thomasreversi.hbo-ict.org/api/Spel/", "@Model.PlayerToken", "@Model.Token");

    });

    document.addEventListener('DOMContentLoaded', function () {
        const skipButton = document.getElementById('skip-turn');
        const giveUpButton = document.getElementById('give-up');

        skipButton.addEventListener('click', function () {
            Game.Reversie.SkipTurn();
        });

        giveUpButton.addEventListener('click', function () {
            Game.Reversie.GiveUp();
        });
    });

</script>
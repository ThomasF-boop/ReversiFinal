@model ReversiMvcApp.Models.ManageUserRolesViewModel

@{
    ViewData["Title"] = "Manage User Roles";
}

<h1>Manage Roles for @Model.UserName</h1>

<form asp-action="Manage" method="post">
    <div class="form-group">
        <label>Roles</label>
        <div>
            @foreach (var role in Model.Roles)
            {
                <div class="form-check">
                    <input class="form-check-input" type="checkbox" name="SelectedRoles" value="@role.Name" @(Model.SelectedRoles.Contains(role.Name) ? "checked" : "") />
                    <label class="form-check-label">@role.Name</label>
                </div>
            }
        </div>
    </div>
    <input type="hidden" asp-for="UserId" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a class="btn btn-secondary" asp-controller="RoleManagement" asp-action="Index">Back to User Roles Management</a>
</form>
